<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE struts PUBLIC "-//Apache Software Foundation//DTD Struts Configuration 2.1//EN" "http://struts.apache.org/dtds/struts-2.1.dtd">
<struts>
	<package name="global" extends="struts-default">
		<interceptors>
			<!-- 定义权限检查拦截器 -->
			<interceptor name="authority" class="org.news.utils.AuthorityInterceptor">
				<param name="allowAction">adminLogin</param>
			</interceptor>
			
			<interceptor-stack name="mydefault">
				<interceptor-ref name="defaultStack" />
				<interceptor-ref name="authority" />
			</interceptor-stack>			
		</interceptors>
		<default-interceptor-ref name="mydefault" />
		<global-results>
			<result name="error">/WEB-INF/pages/errors.jsp</result>
			<result name="forward">/WEB-INF/back/forward.jsp</result>
			<result name="login">/WEB-INF/back/login.jsp</result>
			<result name="input">/WEB-INF/pages/errors.jsp</result>
		</global-results>		
	</package>
	
	<package name="admin" namespace="/back/admin/admin" extends="global">
	
		<action name="Admin_show" class="org.news.action.AdminAction" method="show">
			<result name="success">/WEB-INF/back/admin/admin/admin_show.jsp</result>
			<result name="error">/WebRoot/errors.jsp</result>
		</action>
		<action name="Admin_list" class="org.news.action.AdminAction" method="list">
			<result name="success">/WEB-INF/back/admin/admin/admin_list.jsp</result>
		</action>
		
		
		<action name="Admin_insert_jsp">
			<result>/WEB-INF/back/admin/admin/admin_insert.jsp</result>
		</action>
		<action name="Admin_insert" class="org.news.action.AdminAction" method="insert">
			<result name="success">/WEB-INF/back/admin/admin/admin_operate_do.jsp</result>
			<result name="error">/WebRoot/errors.jsp</result>
		</action>
	
		<action name="Admin_updatepre" class="org.news.action.AdminAction" method="updatepre">
			<result name="success">
				/WEB-INF/back/admin/admin/admin_update.jsp
			</result>
		</action>
		<action name="Admin_update" class="org.news.action.AdminAction" method="update">
			<result name="success">
				/WEB-INF/back/admin/admin/admin_operate_do.jsp
			</result>
		</action>
		
		<action name="Admin_delete" class="org.news.action.AdminAction" method="delete">
			<result name="success">
				/WEB-INF/back/admin/admin/admin_operate_do.jsp
			</result>
		</action>
	 	 
		<action name="*">
			<!-- 此处{1}表示前面第一个*代表的字符串 -->
			<result>/WEB-INF/back/admin/admin/{1}.jsp</result>
		</action>
	</package>	
	
	<package name="back" namespace="/back" extends="global">
		<action name="validateName" class="org.news.action.ValidateNameAction" >
			<result name="success" type="stream">
				<param name="contentType">text/html</param>
				<param name="inputName">tip</param>
			</result>
		</action>
		
		<action name="adminLogout" class="org.news.action.AdminLogoutAction">
			<result name="success">/back/login.jsp</result>
		</action>
		
		<action name="adminLogin" class="org.news.action.AdminLoginAction">
			<result name="success">/WEB-INF/back/index.htm</result>
			<result name="error">/front/index.jsp</result>
		</action>
		
		<action name="*">
			<!-- 此处{1}表示前面第一个*代表的字符串 -->
			<result>/WEB-INF/back/{1}.jsp</result>
		</action>
	</package>
	
	<package name="newsinfo" namespace="/back/admin/newsinfo" extends="global">
		<action name="NewsInfo_insertpre" class="org.news.action.NewsInfoAction" method="insertpre" >
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_insert.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		<action name="NewsInfo_insert" class="org.news.action.NewsInfoAction" method="insert">			
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_insert_do.jsp</result>
			<result name="forward">/WEB-INF/back/login.jsp</result>
			<result name="error">/WEB-INF/back/admin/newsinfo/newsinfo_insert.jsp</result>
		</action>
		
		<action name="NewsInfo_show" class="org.news.action.NewsInfoAction" method="show">
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_show.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		<action name="NewsInfo_list" class="org.news.action.NewsInfoAction" method="list" >
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_list.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		
		<action name="NewsInfo_update" method="update" class="org.news.action.NewsInfoAction">		
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_operate_do.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>

		<action name="NewsInfo_updatepre" method="updatepre" class="org.news.action.NewsInfoAction">
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_update.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		
		<action name="NewsInfo_delete" method="delete" class="org.news.action.NewsInfoAction">
			<result name="success">/WEB-INF/back/admin/newsinfo/newsinfo_operate_do.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>

		<action name="*">
			<!-- 此处{1}表示前面第一个*代表的字符串 -->
			<result>/WEB-INF/back/admin/newsinfo/{1}.jsp</result>
		</action>
	</package>
	
	<package name="newstype" namespace="/back/admin/newstype" extends="global">
		<action name="NewsType_insert_jsp">
			<result>/WEB-INF/back/admin/newstype/newstype_insert.jsp</result>
		</action>
	
		<action name="NewsType_insert" method="insert" class="org.news.action.NewsTypeAction">
			<result name="success">/WEB-INF/back/admin/newstype/newstype_operate_do.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		
		<action name="NewsType_list" method="list" class="org.news.action.NewsTypeAction">
			<result name="success">/WEB-INF/back/admin/newstype/newstype_list.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>

		<action name="NewsType_show" method="show" class="org.news.action.NewsTypeAction">
			<result name="success">/WEB-INF/back/admin/newstype/newstype_show.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		<action name="NewsType_update"  method="update" class="org.news.action.NewsTypeAction">
			<result name="success">/WEB-INF/back/admin/newstype/newstype_operate_do.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		<action name="NewsType_updatepre" method="updatepre" class="org.news.action.NewsTypeAction">
			<result name="success">/WEB-INF/back/admin/newstype/newstype_update.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		<action name="NewsType_delete" method="delete" class="org.news.action.NewsTypeAction">
			<result name="success">/WEB-INF/back/admin/newstype/newstype_operate_do.jsp</result>
			<result name="error">/errors.jsp</result>
		</action>
		
		<action name="*">
			<!-- 此处{1}表示前面第一个*代表的字符串 -->
			<result>/WEB-INF/back/admin/newstype/{1}.jsp</result>
		</action>
	</package>
</struts>